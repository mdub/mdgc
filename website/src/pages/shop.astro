---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout>
	<Navigation />
	
	<main>
		<!-- Hero Section -->
		<section class="bg-green-600 text-white py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<h1 class="text-4xl font-bold">Shop</h1>
				<p class="text-xl mt-4">Disc golf equipment and MDGC merchandise</p>
			</div>
		</section>

		<!-- Content -->
		<section class="py-16">
			<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
				<p class="text-xl text-gray-600 mb-8 text-center">
					Shop coming soon - disc golf equipment and club merchandise
				</p>
			</div>
		</section>
	</main>
</Layout>