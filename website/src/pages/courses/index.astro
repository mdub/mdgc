---
import Layout from '/src/layouts/Layout.astro';
import Header from '/src/components/Header.astro';
import CourseCard from '/src/components/CourseCard.astro';
---

<Layout>
	<Header title="Melbourne Disc Golf Courses" subtitle="Discover amazing disc golf courses across Melbourne" />
	
	<main>

		<!-- Melbourne Courses -->
		<section class="py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
					<CourseCard 
						name="Ruffey Lake Park" 
						href="/courses/ruffey-lake-park" 
						location="Doncaster - MDGC Home Turf" 
						description="Free to play • Public park course" 
					/>
					
					<CourseCard 
						name="Bicentennial Park" 
						href="/courses/bicentennial-park" 
						location="Chelsea, City of Kingston" 
						description="9 tees, 18 baskets • Mixed terrain" 
					/>
					
					<CourseCard 
						name="Bald Hill Park" 
						href="/courses/bald-hill-park" 
						location="Inverness St, Clarinda" 
						description="Beginner-friendly • Full signage" 
					/>
					
					<CourseCard 
						name="Stony Creek Reserve" 
						href="/courses/stony-creek" 
						location="Under Westgate Bridge" 
						description="Near CBD • 9 concrete teepads" 
					/>
					
					<CourseCard 
						name="Little Blind Creek" 
						href="/courses/little-blind-creek" 
						location="Melton" 
						description="Natural environment • Beginner-friendly" 
					/>
					
					<CourseCard 
						name="Llewellyn Park" 
						href="/courses/llewellyn-park" 
						location="Wantirna South" 
						description="Family-friendly • BBQ facilities" 
					/>
					
					<CourseCard 
						name="Caulfield Racecourse" 
						href="/courses/caulfield-racecourse" 
						location="Caulfield" 
						description="4 baskets • Windy conditions" 
					/>
					
					<CourseCard 
						name="Livingstone Primary" 
						href="/courses/livingstone-primary" 
						location="Vermont South" 
						description="6 baskets • Perfect for ace runs" 
					/>
					
					<CourseCard 
						name="Upper Yarra SC" 
						href="/courses/upper-yarra-sc" 
						location="Yarra Junction" 
						description="School course • Educational focus" 
					/>
					
					<CourseCard 
						name="Heathdale Glen Ordem Reserve" 
						href="/courses/heathdale-glen-orden" 
						location="Werribee" 
						description="9 baskets • MDGC/Wyndham partnership" 
					/>
				</div>

				<!-- Other Locations -->
				<div class="mt-16 bg-gray-50 rounded-lg p-8">
					<h2 class="text-2xl font-bold text-center mb-8">Courses Beyond Melbourne</h2>
					<div class="grid md:grid-cols-2 gap-8">
						<div class="bg-white rounded-lg p-6 text-center">
							<h3 class="text-xl font-bold mb-4">Victoria & Australia</h3>
							<p class="text-gray-600 mb-6">
								For comprehensive information about disc golf courses throughout Victoria and Australia, 
								visit flyspot.com.au - the ultimate resource for Australian disc golf course information.
							</p>
							<a href="https://flyspot.com.au" target="_blank" rel="noopener noreferrer" 
								class="bg-mdgc-blue text-white px-6 py-3 rounded-lg font-semibold hover:bg-mdgc-blue-dark transition-colors">
								Visit flyspot.com.au ↗
							</a>
						</div>

						<div class="bg-white rounded-lg p-6 text-center">
							<h3 class="text-xl font-bold mb-4">Courses Worldwide</h3>
							<p class="text-gray-600 mb-6">
								Planning disc golf travels around the world? UDisc is the global standard for 
								course directories, scorekeeping, and finding disc golf wherever you go.
							</p>
							<a href="https://udisc.com" target="_blank" rel="noopener noreferrer" 
								class="bg-mdgc-blue-dark text-white px-6 py-3 rounded-lg font-semibold hover:bg-mdgc-blue transition-colors">
								Visit udisc.com ↗
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>