---
import Layout from '/src/layouts/Layout.astro';
import Navigation from '/src/components/Navigation.astro';
---

<Layout>
	<Navigation />
	
	<main>
		<!-- Hero Section -->
		<section class="bg-green-600 text-white py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<h1 class="text-4xl font-bold">Melbourne Disc Golf Courses</h1>
				<p class="text-xl mt-4">Discover amazing disc golf courses across Melbourne</p>
			</div>
		</section>

		<!-- Melbourne Courses -->
		<section class="py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
					<!-- Featured Courses -->
					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-3">
							<a href="/courses/ruffey-lake-park" class="text-green-600 hover:text-green-700">Ruffey Lake Park</a>
						</h3>
						<p class="text-gray-600 mb-2">Doncaster - MDGC Home Turf</p>
						<p class="text-sm text-gray-500">Free to play • Public park course</p>
					</div>

					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-3">
							<a href="/courses/bicentennial-park" class="text-green-600 hover:text-green-700">Bicentennial Park</a>
						</h3>
						<p class="text-gray-600 mb-2">Chelsea, City of Kingston</p>
						<p class="text-sm text-gray-500">9 tees, 18 baskets • Mixed terrain</p>
					</div>

					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-3">
							<a href="/courses/bald-hill-park" class="text-green-600 hover:text-green-700">Bald Hill Park</a>
						</h3>
						<p class="text-gray-600 mb-2">Inverness St, Clarinda</p>
						<p class="text-sm text-gray-500">Beginner-friendly • Full signage</p>
					</div>

					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-3">
							<a href="/courses/stony-creek" class="text-green-600 hover:text-green-700">Stony Creek Reserve</a>
						</h3>
						<p class="text-gray-600 mb-2">Under Westgate Bridge</p>
						<p class="text-sm text-gray-500">Near CBD • 9 concrete teepads</p>
					</div>

					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-3">
							<a href="/courses/little-blind-creek" class="text-green-600 hover:text-green-700">Little Blind Creek</a>
						</h3>
						<p class="text-gray-600 mb-2">Melton</p>
						<p class="text-sm text-gray-500">Natural environment • Beginner-friendly</p>
					</div>

					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-3">
							<a href="/courses/llewellyn-park" class="text-green-600 hover:text-green-700">Llewellyn Park</a>
						</h3>
						<p class="text-gray-600 mb-2">Wantirna South</p>
						<p class="text-sm text-gray-500">Family-friendly • BBQ facilities</p>
					</div>

					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-3">
							<a href="/courses/caulfield-racecourse" class="text-green-600 hover:text-green-700">Caulfield Racecourse</a>
						</h3>
						<p class="text-gray-600 mb-2">Caulfield</p>
						<p class="text-sm text-gray-500">4 baskets • Windy conditions</p>
					</div>

					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-3">
							<a href="/courses/livingstone-primary" class="text-green-600 hover:text-green-700">Livingstone Primary</a>
						</h3>
						<p class="text-gray-600 mb-2">Vermont South</p>
						<p class="text-sm text-gray-500">6 baskets • Perfect for ace runs</p>
					</div>

					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-3">
							<a href="/courses/upper-yarra-sc" class="text-green-600 hover:text-green-700">Upper Yarra SC</a>
						</h3>
						<p class="text-gray-600 mb-2">Yarra Junction</p>
						<p class="text-sm text-gray-500">School course • Educational focus</p>
					</div>

					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-3">
							<a href="/courses/heathdale-glen-orden" class="text-green-600 hover:text-green-700">Heathdale Glen Orden Reserve</a>
						</h3>
						<p class="text-gray-600 mb-2">Werribee</p>
						<p class="text-sm text-gray-500">9 baskets • MDGC/Wyndham partnership</p>
					</div>
				</div>

				<!-- Other Locations -->
				<div class="mt-16 bg-gray-50 rounded-lg p-8">
					<h2 class="text-2xl font-bold text-center mb-8">Courses Beyond Melbourne</h2>
					<div class="grid md:grid-cols-2 gap-8">
						<div class="bg-white rounded-lg p-6 text-center">
							<h3 class="text-xl font-bold mb-4">Victoria & Australia</h3>
							<p class="text-gray-600 mb-6">
								For comprehensive information about disc golf courses throughout Victoria and Australia, 
								visit flyspot.com.au - the ultimate resource for Australian disc golf course information.
							</p>
							<a href="https://flyspot.com.au" target="_blank" rel="noopener noreferrer" 
								class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
								Visit flyspot.com.au ↗
							</a>
						</div>

						<div class="bg-white rounded-lg p-6 text-center">
							<h3 class="text-xl font-bold mb-4">Courses Worldwide</h3>
							<p class="text-gray-600 mb-6">
								Planning disc golf travels around the world? UDisc is the global standard for 
								course directories, scorekeeping, and finding disc golf wherever you go.
							</p>
							<a href="https://udisc.com" target="_blank" rel="noopener noreferrer" 
								class="bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors">
								Visit udisc.com ↗
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>