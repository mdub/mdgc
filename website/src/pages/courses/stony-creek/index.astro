---
import Layout from '/src/layouts/Layout.astro';
import Navigation from '/src/components/Navigation.astro';
import Hero from '/src/components/Hero.astro';
---

<Layout>
	<Navigation />
	
	<main>
		<Hero title="Stony Creek Reserve" subtitle="Under Westgate Bridge" />

		<!-- Course Content -->
		<section class="py-16">
			<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
				
				<!-- Overview -->
				<div class="bg-green-50 rounded-lg p-8 mb-8">
					<h2 class="text-2xl font-bold text-green-800 mb-4">Course Overview</h2>
					<p class="text-green-700 text-lg mb-4">
						"Collaborative effort between local disc golf community and Maribyrnong City Council"
					</p>
					<p class="text-gray-600">
						Located under the iconic Westgate Bridge, Stony Creek offers a unique urban 
						disc golf experience close to Melbourne's CBD. This course represents a 
						successful partnership between the local disc golf community and council.
					</p>
				</div>

				<!-- Course Details -->
				<div class="grid md:grid-cols-2 gap-8 mb-8">
					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-4">Course Details</h3>
						<ul class="space-y-2 text-gray-600">
							<li><strong>Cost:</strong> Free to play</li>
							<li>9 concrete teepads</li>
							<li>9 permanent baskets</li>
							<li>Near Melbourne CBD</li>
						</ul>
					</div>

					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-4">Course History</h3>
						<ul class="space-y-2 text-gray-600">
							<li><strong>2017:</strong> Original 3 permanent + 1 homemade basket</li>
							<li><strong>Major Upgrade:</strong> Expanded to 9-basket layout</li>
							<li>Added concrete teepads</li>
						</ul>
					</div>
				</div>

				<!-- Resources -->
				<div class="bg-blue-50 rounded-lg p-6 mb-8">
					<h3 class="text-xl font-bold mb-4">Resources</h3>
					<ul class="space-y-2 text-gray-600">
						<li>Course details on uDisc app</li>
						<li>Course map coming soon</li>
					</ul>
				</div>

				<!-- Navigation -->
				<div class="mt-12 text-center">
					<a href="/courses" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors">
						‚Üê Back to All Courses
					</a>
				</div>
			</div>
		</section>
	</main>
</Layout>