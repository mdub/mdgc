---
import Layout from '/src/layouts/Layout.astro';
import Navigation from '/src/components/Navigation.astro';
---

<Layout>
	<Navigation />
	
	<main>
		<!-- Hero Section -->
		<section class="bg-green-600 text-white py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<h1 class="text-4xl font-bold">Livingstone Primary School</h1>
				<p class="text-xl mt-4">Vermont South</p>
			</div>
		</section>

		<!-- Course Content -->
		<section class="py-16">
			<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
				
				<!-- Overview -->
				<div class="bg-green-50 rounded-lg p-8 mb-8">
					<h2 class="text-2xl font-bold text-green-800 mb-4">Course Overview</h2>
					<p class="text-green-700 text-lg mb-4">
						"Perfect for ace runs and practicing short game"
					</p>
					<p class="text-gray-600">
						Located at Livingstone Primary School in Vermont South, this compact course 
						is ideal for skill development and introducing new players to disc golf.
					</p>
				</div>

				<!-- Course Details -->
				<div class="grid md:grid-cols-2 gap-8 mb-8">
					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-4">Course Features</h3>
						<ul class="space-y-2 text-gray-600">
							<li>6 baskets</li>
							<li>Short holes</li>
							<li>Tight hyzer/anhyzer lines</li>
							<li>Perfect for skill practice</li>
						</ul>
					</div>

					<div class="bg-white rounded-lg shadow-lg p-6">
						<h3 class="text-xl font-bold mb-4">Ideal For</h3>
						<ul class="space-y-2 text-gray-600">
							<li>Ace runs</li>
							<li>Practicing short game</li>
							<li>Introducing new players</li>
							<li>Quick rounds</li>
						</ul>
					</div>
				</div>

				<!-- Management -->
				<div class="bg-blue-50 rounded-lg p-6 mb-8">
					<h3 class="text-xl font-bold mb-4">Course Management</h3>
					<ul class="space-y-2 text-gray-600">
						<li>Check-in sign installed near 2nd hole</li>
						<li>Usage tracking recommended</li>
						<li><strong>Support:</strong> Whitehorse City Council</li>
					</ul>
				</div>

				<!-- Navigation -->
				<div class="mt-12 text-center">
					<a href="/courses" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors">
						‚Üê Back to All Courses
					</a>
				</div>
			</div>
		</section>
	</main>
</Layout>