---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
---

<Layout>
	<Navigation />
	
	<main>
		<!-- Hero Section -->
		<section class="bg-green-600 text-white py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<h1 class="text-4xl font-bold">Australia and Overseas</h1>
				<p class="text-xl mt-4">Disc golf courses across Australia and internationally</p>
			</div>
		</section>

		<!-- Content -->
		<section class="py-16">
			<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
				<p class="text-xl text-gray-600 mb-8 text-center">
					Content coming soon - information about disc golf courses across Australia and overseas
				</p>
			</div>
		</section>
	</main>
</Layout>