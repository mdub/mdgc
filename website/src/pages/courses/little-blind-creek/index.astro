---
import Layout from '/src/layouts/Layout.astro';
import Navigation from '/src/components/Navigation.astro';
---

<Layout>
	<Navigation />
	
	<main>
		<!-- Hero Section -->
		<section class="bg-green-600 text-white py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<h1 class="text-4xl font-bold">Little Blind Creek</h1>
				<p class="text-xl mt-4">Melton</p>
			</div>
		</section>

		<!-- Course Content -->
		<section class="py-16">
			<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
				
				<!-- Overview -->
				<div class="bg-green-50 rounded-lg p-8 mb-8">
					<h2 class="text-2xl font-bold text-green-800 mb-4">Course Overview</h2>
					<p class="text-green-700 text-lg mb-4">
						"Beginner-friendly course showcasing natural reserve environment"
					</p>
					<p class="text-gray-600">
						Set in a beautiful natural reserve environment in Melton, Little Blind Creek 
						offers a more intimate disc golf experience with natural obstacles and 
						scenic surroundings.
					</p>
				</div>

				<!-- Course Features -->
				<div class="bg-white rounded-lg shadow-lg p-6 mb-8">
					<h3 class="text-xl font-bold mb-4">Course Features</h3>
					<ul class="space-y-2 text-gray-600">
						<li>9-hole layout</li>
						<li>Short and technical holes</li>
						<li>Multiple throwing lines</li>
						<li>Natural gumtree obstacles</li>
					</ul>
				</div>

				<!-- Navigation -->
				<div class="mt-12 text-center">
					<a href="/courses" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors">
						‚Üê Back to All Courses
					</a>
				</div>
			</div>
		</section>
	</main>
</Layout>