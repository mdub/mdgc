---
import Layout from '/src/layouts/Layout.astro';
import { Icon } from 'astro-icon/components'
---

<Layout title="Contact Us" subtitle="Get in touch with Melbourne Disc Golf Club">
	
	<main>

		<!-- Contact Content -->
		<section class="py-16">
			<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid lg:grid-cols-2 gap-12">
					
					<!-- Contact Information -->
					<div>
						<h2 class="text-3xl font-bold mb-8">Get In Touch</h2>
						
						<div class="space-y-6">
							<!-- Email -->
							<div class="flex items-start space-x-4">
								<div class="bg-green-100 rounded-full w-12 h-12 flex items-center justify-center flex-shrink-0">
									<Icon name="heroicons:envelope" class="w-6 h-6 text-green-600" />
								</div>
								<div>
									<h3 class="font-semibold text-lg">Email</h3>
									<p class="text-gray-600">General Inquiries</p>
									<a href="mailto:info@melbournediscgolf.com" class="text-green-600 hover:text-green-700">
										info@melbournediscgolf.com
									</a>
									<p class="text-gray-600 mt-2">Pro Shop/Disc Store</p>
									<a href="mailto:proshop@melbournediscgolf.com" class="text-green-600 hover:text-green-700">
										proshop@melbournediscgolf.com
									</a>
								</div>
							</div>

							<!-- Phone -->
							<div class="flex items-start space-x-4">
								<div class="bg-green-100 rounded-full w-12 h-12 flex items-center justify-center flex-shrink-0">
									<Icon name="heroicons:phone" class="w-6 h-6 text-green-600" />
								</div>
								<div>
									<h3 class="font-semibold text-lg">Phone</h3>
									<a href="tel:+61409827784" class="text-green-600 hover:text-green-700">
										+61 409 827 784
									</a>
								</div>
							</div>

							<!-- Social Media -->
							<div class="flex items-start space-x-4">
								<div class="bg-green-100 rounded-full w-12 h-12 flex items-center justify-center flex-shrink-0">
									<Icon name="heroicons:share" class="w-6 h-6 text-green-600" />
								</div>
								<div>
									<h3 class="font-semibold text-lg">Follow Us</h3>
									<div class="space-y-2">
										<a href="https://www.facebook.com/melbournediscgolf" class="block text-green-600 hover:text-green-700">
											Facebook
										</a>
										<a href="https://www.instagram.com/melbournediscgolf/" class="block text-green-600 hover:text-green-700">
											Instagram
										</a>
									</div>
								</div>
							</div>
						</div>

						<!-- Information Box -->
						<div class="mt-8 bg-green-50 border border-green-200 rounded-lg p-6">
							<h3 class="font-semibold text-green-800 mb-2">Questions About Disc Golf?</h3>
							<p class="text-green-700">
								For more information on Disc Golf or the Melbourne Disc Golf Club, 
								please don't hesitate to reach out using any of the contact methods above.
							</p>
						</div>
					</div>

					<!-- Contact Form -->
					<div>
						<h2 class="text-3xl font-bold mb-8">Send us a Message</h2>
						
						<form class="space-y-6">
							<div>
								<label for="name" class="block text-sm font-medium text-gray-700 mb-2">Name</label>
								<input type="text" id="name" name="name" required 
									class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
							</div>
							
							<div>
								<label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
								<input type="email" id="email" name="email" required 
									class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
							</div>
							
							<div>
								<label for="subject" class="block text-sm font-medium text-gray-700 mb-2">Subject</label>
								<input type="text" id="subject" name="subject" required 
									class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
							</div>
							
							<div>
								<label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
								<textarea id="message" name="message" rows="6" required 
									class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500"></textarea>
							</div>
							
							<button type="submit" 
								class="w-full bg-green-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-green-700 transition-colors">
								Send Message
							</button>
						</form>

						<p class="text-sm text-gray-600 mt-4">
							We'll get back to you as soon as possible. For urgent matters, please call us directly.
						</p>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>