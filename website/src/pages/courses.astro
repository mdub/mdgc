---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Course from '../components/Course.astro';
---

<Layout>
	<Navigation />
	
	<main>
		<!-- Hero Section -->
		<section class="bg-green-600 text-white py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<h1 class="text-4xl font-bold">Disc Golf Courses in Melbourne</h1>
				<p class="text-xl mt-4">Discover amazing disc golf courses across Melbourne</p>
			</div>
		</section>

		<!-- Courses Grid -->
		<section class="py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
					<Course 
						name="Bicentennial Park" 
						location="Chelsea, City of Kingston"
						quote="A fantastic challenge suitable for both new and experienced players"
					>
						<h4>Course Features:</h4>
						<ul>
							<li>9 tees, 18 baskets</li>
							<li>Practice basket</li>
							<li>Tee signage and course map</li>
							<li>Mixed terrain (trees + open holes)</li>
						</ul>
						
						<h4>Park Amenities:</h4>
						<ul>
							<li>Toilets and playground</li>
							<li>Sports courts and ovals</li>
							<li>Skatepark</li>
						</ul>
					</Course>

					<Course 
						name="Ruffey Lake Park" 
						location="Doncaster, Manningham City Council"
						quote="An amazingly large area of public parkland"
					>
						<h4>Course Details:</h4>
						<ul>
							<li><strong>Cost:</strong> Free to play</li>
							<li><strong>Type:</strong> Public park course</li>
							<li><strong>Status:</strong> MDGC home turf</li>
						</ul>
						
						<h4>Course History:</h4>
						<ul>
							<li><strong>2012:</strong> Original 6 baskets installed</li>
							<li><strong>2016:</strong> Expanded with 3 new baskets</li>
							<li>Additional tees added by MDGC</li>
						</ul>
					</Course>

					<Course 
						name="Bald Hill Park" 
						location="Inverness St, Clarinda"
						quote="Beginner-friendly while providing complete disc golf experience"
					>
						<h4>Course Features:</h4>
						<ul>
							<li>9 baskets, 18 tees</li>
							<li>Concrete tee pads</li>
							<li>RAD baskets</li>
							<li>Full course signage</li>
							<li>Practice basket area</li>
						</ul>
						
						<h4>Beginner Friendly:</h4>
						<ul>
							<li>"How to play" sign for new players</li>
							<li>Designed for all skill levels</li>
							<li>Practice area available</li>
						</ul>
					</Course>

					<Course 
						name="Stony Creek" 
						location="Stony Creek Reserve, under Westgate Bridge"
						quote="Collaborative effort between local disc golf community and Maribyrnong City Council"
					>
						<h4>Course Details:</h4>
						<ul>
							<li><strong>Cost:</strong> Free to play</li>
							<li>9 concrete teepads</li>
							<li>9 permanent baskets</li>
							<li>Near Melbourne CBD</li>
						</ul>
						
						<h4>Course History:</h4>
						<ul>
							<li><strong>2017:</strong> Original 3 permanent + 1 homemade basket</li>
							<li><strong>Major Upgrade:</strong> Expanded to 9-basket layout</li>
							<li>Added concrete teepads</li>
						</ul>
						
						<h4>Resources:</h4>
						<ul>
							<li>Course details on uDisc app</li>
							<li>Course map coming soon</li>
						</ul>
					</Course>

					<Course 
						name="Little Blind Creek" 
						location="Melton"
						quote="Beginner-friendly course showcasing natural reserve environment"
					>
						<h4>Course Features:</h4>
						<ul>
							<li>9-hole layout</li>
							<li>Short and technical holes</li>
							<li>Multiple throwing lines</li>
							<li>Natural gumtree obstacles</li>
						</ul>
					</Course>

					<Course 
						name="Livingstone Primary" 
						location="Vermont South"
						quote="Perfect for ace runs and practicing short game"
					>
						<h4>Course Features:</h4>
						<ul>
							<li>6 baskets</li>
							<li>Short holes</li>
							<li>Tight hyzer/anhyzer lines</li>
							<li>Usage tracking</li>
						</ul>
					</Course>

					<Course 
						name="Upper Yarra SC" 
						location="Yarra Junction"
						quote="Educational and recreational opportunities for school community"
					>
						<h4>Course Features:</h4>
						<ul>
							<li>9-hole course</li>
							<li>Integrated into PE curriculum</li>
							<li>Used by students and staff</li>
							<li>Designed by Andrew Ferguson (RAD)</li>
						</ul>
					</Course>

					<Course 
						name="Heathdale Glen Orden" 
						location="Werribee"
						quote="Partnership between MDGC and Wyndham City"
					>
						<h4>Course Features:</h4>
						<ul>
							<li>9-basket course</li>
							<li>North and south sections</li>
							<li>Structured layout across reserve</li>
						</ul>
					</Course>

					<Course 
						name="Llewellyn Park" 
						location="Wantirna South"
						quote="Welcoming location for introducing friends and family"
					>
						<h4>Course Features:</h4>
						<ul>
							<li>9 baskets, 18 tees</li>
							<li>Temporary course</li>
							<li>Beginner to intermediate friendly</li>
							<li>Heritage from "Melbourne Celebrates 2023"</li>
						</ul>
					</Course>

					<Course 
						name="Caulfield Racecourse" 
						location="Caulfield"
						quote="Perfect for beginners and families, tricky for intermediate players"
					>
						<h4>Course Features:</h4>
						<ul>
							<li>4-basket temporary course</li>
							<li>Often windy conditions</li>
							<li>Free BBQ and toilet facilities</li>
							<li>Open daily until sunset</li>
						</ul>
					</Course>
				</div>

				<!-- Additional Information -->
				<div class="mt-16 bg-gray-50 rounded-lg p-8">
					<h2 class="text-2xl font-bold text-center mb-8">Explore More Courses</h2>
					<div class="grid md:grid-cols-3 gap-6 text-center">
						<div>
							<h3 class="font-semibold mb-2">Victoria Courses</h3>
							<p class="text-gray-600 mb-4">Discover disc golf courses throughout Victoria</p>
							<a href="/courses/victoria" class="text-green-600 hover:text-green-700 font-medium">View Courses</a>
						</div>
						<div>
							<h3 class="font-semibold mb-2">Australia & Overseas</h3>
							<p class="text-gray-600 mb-4">International disc golf destinations</p>
							<a href="/courses/australia" class="text-green-600 hover:text-green-700 font-medium">Explore Destinations</a>
						</div>
						<div>
							<h3 class="font-semibold mb-2">Course Installation</h3>
							<p class="text-gray-600 mb-4">Learn about installing disc golf courses</p>
							<a href="/courses/installation" class="text-green-600 hover:text-green-700 font-medium">Learn More</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>