---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout>
	<Navigation />
	
	<main>
		<!-- Hero Section -->
		<section class="bg-green-600 text-white py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<h1 class="text-4xl font-bold">Disc Golf Courses in Melbourne</h1>
				<p class="text-xl mt-4">Discover amazing disc golf courses across Melbourne</p>
			</div>
		</section>

		<!-- Courses Grid -->
		<section class="py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
					<!-- Bicentennial Park -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden">
						<div class="h-48 bg-green-100 flex items-center justify-center">
							<svg class="w-16 h-16 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
							</svg>
						</div>
						<div class="p-6">
							<h3 class="text-2xl font-bold mb-2">Bicentennial Park</h3>
							<p class="text-gray-600 mb-4"><strong>Location:</strong> Chelsea, City of Kingston</p>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Course Features:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• 9 tees, 18 baskets</li>
									<li>• Practice basket</li>
									<li>• Tee signage and course map</li>
									<li>• Mixed terrain (trees + open holes)</li>
								</ul>
							</div>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Park Amenities:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• Toilets and playground</li>
									<li>• Sports courts and ovals</li>
									<li>• Skatepark</li>
								</ul>
							</div>
							
							<p class="text-gray-600 italic">
								"A fantastic challenge suitable for both new and experienced players"
							</p>
						</div>
					</div>

					<!-- Ruffey Lake Park -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden">
						<div class="h-48 bg-blue-100 flex items-center justify-center">
							<svg class="w-16 h-16 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 7.172V5L8 4z"></path>
							</svg>
						</div>
						<div class="p-6">
							<h3 class="text-2xl font-bold mb-2">Ruffey Lake Park</h3>
							<p class="text-gray-600 mb-4"><strong>Location:</strong> Doncaster, Manningham City Council</p>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Course Details:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• <strong>Cost:</strong> Free to play</li>
									<li>• <strong>Type:</strong> Public park course</li>
									<li>• <strong>Status:</strong> MDGC home turf</li>
								</ul>
							</div>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Course History:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• <strong>2012:</strong> Original 6 baskets installed</li>
									<li>• <strong>2016:</strong> Expanded with 3 new baskets</li>
									<li>• Additional tees added by MDGC</li>
								</ul>
							</div>
							
							<p class="text-gray-600 italic">
								"An amazingly large area of public parkland"
							</p>
						</div>
					</div>

					<!-- Bald Hill Park -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden">
						<div class="h-48 bg-orange-100 flex items-center justify-center">
							<svg class="w-16 h-16 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
							</svg>
						</div>
						<div class="p-6">
							<h3 class="text-2xl font-bold mb-2">Bald Hill Park</h3>
							<p class="text-gray-600 mb-4"><strong>Location:</strong> Inverness St, Clarinda</p>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Course Features:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• 9 baskets, 18 tees</li>
									<li>• Concrete tee pads</li>
									<li>• RAD baskets</li>
									<li>• Full course signage</li>
									<li>• Practice basket area</li>
								</ul>
							</div>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Beginner Friendly:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• "How to play" sign for new players</li>
									<li>• Designed for all skill levels</li>
									<li>• Practice area available</li>
								</ul>
							</div>
							
							<p class="text-gray-600 italic">
								"Beginner-friendly while providing complete disc golf experience"
							</p>
						</div>
					</div>

					<!-- Stony Creek -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden">
						<div class="h-48 bg-purple-100 flex items-center justify-center">
							<svg class="w-16 h-16 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 7.172V5L8 4z"></path>
							</svg>
						</div>
						<div class="p-6">
							<h3 class="text-2xl font-bold mb-2">Stony Creek</h3>
							<p class="text-gray-600 mb-4"><strong>Location:</strong> Stony Creek Reserve, under Westgate Bridge</p>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Course Details:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• <strong>Cost:</strong> Free to play</li>
									<li>• 9 concrete teepads</li>
									<li>• 9 permanent baskets</li>
									<li>• Near Melbourne CBD</li>
								</ul>
							</div>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Course History:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• <strong>2017:</strong> Original 3 permanent + 1 homemade basket</li>
									<li>• <strong>Major Upgrade:</strong> Expanded to 9-basket layout</li>
									<li>• Added concrete teepads</li>
								</ul>
							</div>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Resources:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• Course details on uDisc app</li>
									<li>• Course map coming soon</li>
								</ul>
							</div>
							
							<p class="text-gray-600 italic">
								"Collaborative effort between local disc golf community and Maribyrnong City Council"
							</p>
						</div>
					</div>

					<!-- Little Blind Creek -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden">
						<div class="h-48 bg-yellow-100 flex items-center justify-center">
							<svg class="w-16 h-16 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16l-3-9M15 5l3 4m-6 0l6-4"></path>
							</svg>
						</div>
						<div class="p-6">
							<h3 class="text-2xl font-bold mb-2">Little Blind Creek</h3>
							<p class="text-gray-600 mb-4"><strong>Location:</strong> Melton</p>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Course Features:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• 9-hole layout</li>
									<li>• Short and technical holes</li>
									<li>• Multiple throwing lines</li>
									<li>• Natural gumtree obstacles</li>
								</ul>
							</div>
							
							<p class="text-gray-600 italic">
								"Beginner-friendly course showcasing natural reserve environment"
							</p>
						</div>
					</div>

					<!-- Livingstone Primary -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden">
						<div class="h-48 bg-red-100 flex items-center justify-center">
							<svg class="w-16 h-16 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
							</svg>
						</div>
						<div class="p-6">
							<h3 class="text-2xl font-bold mb-2">Livingstone Primary</h3>
							<p class="text-gray-600 mb-4"><strong>Location:</strong> Vermont South</p>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Course Features:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• 6 baskets</li>
									<li>• Short holes</li>
									<li>• Tight hyzer/anhyzer lines</li>
									<li>• Usage tracking</li>
								</ul>
							</div>
							
							<p class="text-gray-600 italic">
								"Perfect for ace runs and practicing short game"
							</p>
						</div>
					</div>

					<!-- Upper Yarra SC -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden">
						<div class="h-48 bg-indigo-100 flex items-center justify-center">
							<svg class="w-16 h-16 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
							</svg>
						</div>
						<div class="p-6">
							<h3 class="text-2xl font-bold mb-2">Upper Yarra SC</h3>
							<p class="text-gray-600 mb-4"><strong>Location:</strong> Yarra Junction</p>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Course Features:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• 9-hole course</li>
									<li>• Integrated into PE curriculum</li>
									<li>• Used by students and staff</li>
									<li>• Designed by Andrew Ferguson (RAD)</li>
								</ul>
							</div>
							
							<p class="text-gray-600 italic">
								"Educational and recreational opportunities for school community"
							</p>
						</div>
					</div>

					<!-- Heathdale Glen Orden -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden">
						<div class="h-48 bg-pink-100 flex items-center justify-center">
							<svg class="w-16 h-16 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
							</svg>
						</div>
						<div class="p-6">
							<h3 class="text-2xl font-bold mb-2">Heathdale Glen Orden</h3>
							<p class="text-gray-600 mb-4"><strong>Location:</strong> Werribee</p>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Course Features:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• 9-basket course</li>
									<li>• North and south sections</li>
									<li>• Structured layout across reserve</li>
								</ul>
							</div>
							
							<p class="text-gray-600 italic">
								"Partnership between MDGC and Wyndham City"
							</p>
						</div>
					</div>

					<!-- Llewellyn Park -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden">
						<div class="h-48 bg-teal-100 flex items-center justify-center">
							<svg class="w-16 h-16 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
							</svg>
						</div>
						<div class="p-6">
							<h3 class="text-2xl font-bold mb-2">Llewellyn Park</h3>
							<p class="text-gray-600 mb-4"><strong>Location:</strong> Wantirna South</p>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Course Features:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• 9 baskets, 18 tees</li>
									<li>• Temporary course</li>
									<li>• Beginner to intermediate friendly</li>
									<li>• Heritage from "Melbourne Celebrates 2023"</li>
								</ul>
							</div>
							
							<p class="text-gray-600 italic">
								"Welcoming location for introducing friends and family"
							</p>
						</div>
					</div>

					<!-- Caulfield Racecourse -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden">
						<div class="h-48 bg-gray-100 flex items-center justify-center">
							<svg class="w-16 h-16 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
							</svg>
						</div>
						<div class="p-6">
							<h3 class="text-2xl font-bold mb-2">Caulfield Racecourse</h3>
							<p class="text-gray-600 mb-4"><strong>Location:</strong> Caulfield</p>
							
							<div class="mb-4">
								<h4 class="font-semibold mb-2">Course Features:</h4>
								<ul class="text-gray-600 space-y-1">
									<li>• 4-basket temporary course</li>
									<li>• Often windy conditions</li>
									<li>• Free BBQ and toilet facilities</li>
									<li>• Open daily until sunset</li>
								</ul>
							</div>
							
							<p class="text-gray-600 italic">
								"Perfect for beginners and families, tricky for intermediate players"
							</p>
						</div>
					</div>
				</div>

				<!-- Additional Information -->
				<div class="mt-16 bg-gray-50 rounded-lg p-8">
					<h2 class="text-2xl font-bold text-center mb-8">Explore More Courses</h2>
					<div class="grid md:grid-cols-3 gap-6 text-center">
						<div>
							<h3 class="font-semibold mb-2">Victoria Courses</h3>
							<p class="text-gray-600 mb-4">Discover disc golf courses throughout Victoria</p>
							<a href="/courses/victoria" class="text-green-600 hover:text-green-700 font-medium">View Courses</a>
						</div>
						<div>
							<h3 class="font-semibold mb-2">Australia & Overseas</h3>
							<p class="text-gray-600 mb-4">International disc golf destinations</p>
							<a href="/courses/australia" class="text-green-600 hover:text-green-700 font-medium">Explore Destinations</a>
						</div>
						<div>
							<h3 class="font-semibold mb-2">Course Installation</h3>
							<p class="text-gray-600 mb-4">Learn about installing disc golf courses</p>
							<a href="/courses/installation" class="text-green-600 hover:text-green-700 font-medium">Learn More</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>