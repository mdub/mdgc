---
import logoImage from '/src/assets/images/mdgc-logo.png';
import { navItems } from '/src/data/navigation.js';

// Check if current page is under a nav item
function isActiveNavItem(itemHref: string, currentPath: string): boolean {
  if (itemHref === '/' && currentPath === '/') return true;
  if (itemHref !== '/' && currentPath.startsWith(itemHref)) return true;
  return false;
}

const currentPath = Astro.url.pathname;

// Transform navigation data for footer - show all nav items
const footerSections = navItems;
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-8">
      <!-- Logo -->
      <div class="lg:col-start-1 lg:col-span-1">
        <img src={logoImage.src} alt="Melbourne Disc Golf Club" class="h-16 w-auto mb-4" />
      </div>

      <!-- Navigation sections -->
      {footerSections.map(section => (
        <div>
          <h3 class="text-lg font-semibold mb-4">
            <a href={section.href} class={`${isActiveNavItem(section.href, currentPath) ? 'text-white' : 'text-mdgc-blue-light'} hover:text-white transition-colors`}>
              {section.title}
            </a>
          </h3>
          {section.subPages && (
            <ul class="space-y-2">
              {section.subPages.map(link => (
                <li>
                  <a href={link.href} class={`${isActiveNavItem(link.href, currentPath) ? 'text-white' : 'text-mdgc-blue-light'} hover:text-white transition-colors`}>
                    {link.title}
                  </a>
                </li>
              ))}
            </ul>
          )}
        </div>
      ))}
    </div>

    <!-- Bottom section -->
    <div class="border-t border-gray-700 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-400 text-sm">
        Â© {new Date().getFullYear()} Melbourne Disc Golf Club. All rights reserved.
      </p>
      <div class="flex space-x-6 mt-4 md:mt-0">
        <a href="/club/contact" class={`${isActiveNavItem('/club/contact', currentPath) ? 'text-white' : 'text-mdgc-blue-light'} hover:text-white transition-colors text-sm`}>
          Contact
        </a>
        <a href="/club/membership" class={`${isActiveNavItem('/club/membership', currentPath) ? 'text-white' : 'text-mdgc-blue-light'} hover:text-white transition-colors text-sm`}>
          Join Us
        </a>
      </div>
    </div>
  </div>
</footer>