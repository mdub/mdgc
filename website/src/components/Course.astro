---
export interface Props {
	name: string;
	location: string;
	quote?: string;
}

const { name, location, quote } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden">
	<div class="h-48 bg-green-100 flex items-center justify-center">
		<svg class="w-16 h-16 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
		</svg>
	</div>
	<div class="p-6">
		<h3 class="text-2xl font-bold mb-2">{name}</h3>
		<p class="text-gray-600 mb-4"><strong>Location:</strong> {location}</p>

		<div class="course-content">
			<slot />
		</div>

		{quote && (
			<p class="text-gray-600 italic mt-4">
				"{quote}"
			</p>
		)}
	</div>
</div>

<style>
	.course-content :global(h4) {
		font-weight: 600;
		margin-bottom: 0.5rem;
	}

	.course-content :global(ul) {
		color: rgb(75 85 99);
		margin-bottom: 1rem;
		list-style-type: disc;
		padding-left: 1.25rem;
	}

	.course-content :global(li) {
		color: rgb(75 85 99);
		margin-bottom: 0.25rem;
	}

	.course-content :global(p) {
		color: rgb(75 85 99);
		margin-bottom: 1rem;
	}
</style>