---
const navItems = [
  {
    title: 'Disc Golf',
    href: '/disc-golf',
    dropdown: [
      { title: 'What is Disc Golf?', href: '/disc-golf' },
      { title: 'New Player Essentials', href: '/disc-golf/new-players' }
    ]
  },
  {
    title: 'Courses',
    href: '/courses',
    dropdown: [
      { title: 'Melbourne Courses', href: '/courses' },
      { title: 'Other Courses in Victoria', href: '/courses/victoria' },
      { title: 'Australia and Overseas', href: '/courses/australia' }
    ]
  },
  {
    title: 'Club',
    href: '/club',
    dropdown: [
      { title: 'About MDGC', href: '/club' },
      { title: 'Membership', href: '/club/membership' },
      { title: 'Contact Us', href: '/club/contact' },
      { title: 'MDGC Board', href: '/club/board' }
    ]
  },
  {
    title: 'Events',
    href: '/events'
  },
  {
    title: 'Shop',
    href: '/shop'
  }
];
---

<nav class="bg-green-600 text-white shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center h-16 space-x-8">
      <a href="/" class="text-xl font-bold">MDGC</a>
      
      <div class="hidden md:flex items-center space-x-8">
        {navItems.map(item => (
          item.dropdown ? (
            <div class="relative group">
              <button class="hover:text-green-200 transition-colors flex items-center">
                {item.title}
                <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <div class="absolute left-0 mt-2 w-56 bg-white text-gray-800 rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all z-10">
                {item.dropdown.map(subItem => (
                  <a href={subItem.href} class="block px-4 py-2 hover:bg-gray-100">{subItem.title}</a>
                ))}
              </div>
            </div>
          ) : (
            <a href={item.href} class="hover:text-green-200 transition-colors">{item.title}</a>
          )
        ))}
      </div>

      
      <!-- Mobile menu button -->
      <div class="md:hidden ml-auto">
        <button id="mobile-menu-button" class="text-white hover:text-green-200">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="md:hidden hidden">
      <div class="px-2 pt-2 pb-3 space-y-1">
        {navItems.map(item => (
          <a href={item.href} class="block px-3 py-2 hover:bg-green-700 rounded-md">{item.title}</a>
        ))}
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>