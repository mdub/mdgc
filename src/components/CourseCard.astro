---
export interface Props {
  name: string;
  href: string;
  location: string;
  image: string;
}

const { name, href, location, image } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  <a href={href} class="block">
    <img 
      src={image} 
      alt={name}
      class="w-full h-48 object-cover"
    />
    <div class="p-6">
      <h3 class="text-xl font-bold mb-2 text-mdgc-blue hover:text-mdgc-blue-dark transition-colors">
        {name}
      </h3>
      <p class="text-gray-600">{location}</p>
    </div>
  </a>
</div>