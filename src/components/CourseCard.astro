---
export interface Props {
  name: string;
  href: string;
  location: string;
  image: string;
}

const { name, href, location, image } = Astro.props;
---

<a href={href} class="course-card">
  <div class="course-card-inner">
    <img
      src={image}
      alt={name}
      class="course-card-image"
    />
    <div class="course-card-content">
      <h3 class="course-card-title">
        {name}
      </h3>
      <p class="course-card-location">{location}</p>
    </div>
  </div>
</a>

<style>
  .course-card {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .course-card-inner {
    background-color: white;
    border: 1px solid #d1d5db;
    border-radius: 0.5rem;
    overflow: hidden;
    transition: all 0.2s;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .course-card:hover .course-card-inner {
    border-color: var(--color-mdgc-blue-dark);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .course-card-image {
    width: 100%;
    height: 12rem;
    object-fit: cover;
    flex-shrink: 0;
  }

  .course-card-content {
    padding: 1.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .course-card-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--color-mdgc-blue);
    transition: color 0.2s;
  }

  .course-card:hover .course-card-title {
    color: var(--color-mdgc-blue-dark);
  }

  .course-card-location {
    color: #6b7280;
    margin: 0;
  }
</style>