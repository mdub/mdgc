---
export interface Props {
  name: string;
  href: string;
  location: string;
  description: string;
}

const { name, href, location, description } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg p-6">
  <h3 class="text-xl font-bold mb-3">
    <a href={href} class="text-mdgc-blue hover:text-mdgc-blue-dark transition-colors">{name}</a>
  </h3>
  <p class="text-gray-600 mb-2">{location}</p>
  <p class="text-sm text-gray-500">{description}</p>
</div>