---
export interface Props {
  class?: string;
  background?: 'white' | 'gray' | 'green';
}

const { class: className = "", background = 'white' } = Astro.props;

const backgrounds = {
  white: 'bg-white shadow-lg',
  gray: 'bg-gray-50',
  green: 'bg-green-50'
};
---

<div class={`rounded-lg p-8 ${backgrounds[background]} ${className}`}>
  <slot />
</div>
