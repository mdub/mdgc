---
import { Icon } from 'astro-icon/components';

interface Props {
	href: string;
	title: string;
	description: string;
	icon: string;
}

const { href, title, description, icon } = Astro.props;
---

<a href={href} class="link-panel">
	<div class="link-panel-inner">
		<div class="link-panel-icon">
			<Icon name={icon} size={96} />
		</div>
		<h3>{title}</h3>
		<p>{description}</p>
	</div>
</a>

<style>
	.link-panel {
		text-decoration: none;
		color: inherit;
		display: block;
		cursor: pointer;
	}

	.link-panel-inner {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		background-color: #f9fafb;
		border: 1px solid #d1d5db;
		border-radius: 0.5rem;
		padding: 2rem;
		margin: 2rem 0;
		transition: transform 0.2s;
	}

	.link-panel:hover .link-panel-inner {
		transform: scale(1.05);
	}

	.link-panel:hover .link-panel-icon {
		color: var(--color-mdgc-blue-dark);
	}

	.link-panel-icon {
		margin-bottom: 1rem;
		color: var(--color-mdgc-blue);
		transition: all 0.2s;
	}

	.link-panel h3 {
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
		color: #1f2937;
	}

	.link-panel p {
		color: #6b7280;
		font-size: 0.875rem;
	}
</style>
