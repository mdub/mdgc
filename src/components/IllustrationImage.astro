---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
	src: ImageMetadata;
	alt: string;
	caption?: string;
	class?: string;
}

const { src, alt, caption, class: className = "" } = Astro.props;
---

<figure class={`max-w-[250px] mx-auto md:mx-0 mt-4 md:mt-0 mb-4 md:float-right md:ml-6 ${className}`}>
	<Image
		src={src}
		alt={alt}
		title={alt}
		class="w-full rounded-lg object-cover"
		inferSize={true}
	/>
	{caption && (
		<figcaption class="text-sm text-gray-600 mt-2 text-center italic">
			{caption}
		</figcaption>
	)}
</figure>
