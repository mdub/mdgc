---
export interface Props {
  title: string;
  description?: string;
  primaryButton?: {
    text: string;
    href: string;
  };
  secondaryButton?: {
    text: string;
    href: string;
  };
}

const { title, description, primaryButton, secondaryButton } = Astro.props;
---

<div class="text-center">
  <h2 class="text-2xl font-bold mb-4">{title}</h2>
  {description && (
    <p class="text-gray-600 mb-6">{description}</p>
  )}
  <div class="space-x-4">
    {primaryButton && (
      <a 
        href={primaryButton.href} 
        class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors"
      >
        {primaryButton.text}
      </a>
    )}
    {secondaryButton && (
      <a 
        href={secondaryButton.href} 
        class="bg-white text-green-600 px-8 py-3 rounded-lg font-semibold border border-green-600 hover:bg-green-50 transition-colors"
      >
        {secondaryButton.text}
      </a>
    )}
  </div>
</div>