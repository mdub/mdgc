---
import { Icon } from 'astro-icon/components';

export interface Props {
  char?: string;
  icon?: string;
  title: string;
  description: string;
  iconColor?: string;
  background?: string;
}

const { 
  char,
  icon,
  title, 
  description, 
  iconColor = 'text-green-600',
  background = 'bg-green-100'
} = Astro.props;
---

<div class="text-center">
  <div class={`rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center ${background}`}>
    {char ? (
      <span class={`text-2xl font-bold ${iconColor}`}>{char}</span>
    ) : icon ? (
      <Icon name={icon} class={`w-8 h-8 ${iconColor}`} />
    ) : null}
  </div>
  <h3 class="font-semibold mb-2">{title}</h3>
  <p class="text-gray-600 text-sm">{description}</p>
</div>