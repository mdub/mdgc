---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
	src: ImageMetadata;
	alt: string;
	class?: string;
}

const { src, alt, class: className = "" } = Astro.props;
---

<Image
	src={src}
	alt={alt}
	class={`w-full my-8 rounded-lg object-cover ${className}`}
/>
