---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
	src: ImageMetadata;
	alt: string;
	caption?: string;
	class?: string;
}

const { src, alt, caption, class: className = "" } = Astro.props;
---

<figure class="my-8">
	<Image
		src={src}
		alt={alt}
		title={alt}
		class={`w-full rounded-lg object-cover ${className}`}
		inferSize={true}
	/>
	{caption && (
		<figcaption class="text-sm text-gray-600 mt-2 text-center italic">
			{caption}
		</figcaption>
	)}
</figure>
