---
import { Icon } from 'astro-icon/components';
import Panel from './Panel.astro';

interface Props {
	href: string;
	title: string;
	description: string;
	icon: string;
}

const { href, title, description, icon } = Astro.props;
---

<a href={href} class="section-link">
	<Panel class="section-link-panel flex flex-col items-center text-center">
		<div class="section-link-icon">
			<Icon name={icon} size={96} />
		</div>
		<h3>{title}</h3>
		<p>{description}</p>
	</Panel>
</a>

<style>
	.section-link {
		text-decoration: none;
		color: inherit;
		display: block;
		transition: all 0.2s;
		cursor: pointer;
	}

	.section-link:hover {
		transform: translateY(-4px);
	}

	.section-link:hover .section-link-panel {
		box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.2);
	}

	.section-link:hover .section-link-icon {
		color: var(--color-mdgc-blue-dark);
		transform: scale(1.1);
	}

	.section-link-icon {
		margin-bottom: 1rem;
		color: var(--color-mdgc-blue);
		transition: all 0.2s;
	}

	.section-link h3 {
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
		color: #1f2937;
	}

	.section-link p {
		color: #6b7280;
		font-size: 0.875rem;
	}
</style>
