---
import { getCollection, getEntry } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '@layouts/Layout.astro';
import Text from '@components/Text.astro';

export async function getStaticPaths() {
  const events = await getCollection('events', ({ data }) => data.eventType === 'tournament');
  return events.map((event) => ({
    params: { slug: event.slug },
    props: { event },
  }));
}

const { event } = Astro.props;
const { Content } = await event.render();

const courses = await Promise.all(
  event.data.courses.map(async (courseRef) => {
    const course = await getEntry(courseRef);
    return course;
  })
);

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-AU', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<Layout
  title={event.data.title}
  subtitle={formatDate(event.data.date)}
  collectionName="events"
  entrySlug={event.slug}
>
  {event.data.heroImage && (
    <Image
      src={event.data.heroImage}
      alt={event.data.title}
      class="w-full max-h-96 object-contain rounded-lg my-8"
      inferSize={true}
    />
  )}

  <Text>
    <Content />

    <section>
      <h2>Event details</h2>
      <dl>
        <dt>Date</dt>
        <dd>{formatDate(event.data.date)}</dd>

        {event.data.endDate && (
          <>
            <dt>End date</dt>
            <dd>{formatDate(event.data.endDate)}</dd>
          </>
        )}

        <dt>{courses.length > 1 ? 'Courses' : 'Course'}</dt>
        <dd>
          {courses.map((course, index) => (
            <>
              <a href={`/courses/${course.slug}`}>{course.data.title}</a>
              {index < courses.length - 1 && ', '}
            </>
          ))}
        </dd>

        {event.data.registrationUrl && (
          <>
            <dt>Registration</dt>
            <dd>
              <a href={event.data.registrationUrl} target="_blank" rel="noopener noreferrer">
                Register here
              </a>
            </dd>
          </>
        )}
      </dl>
    </section>
  </Text>
</Layout>

<style>
  dl {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.5rem 1rem;
  }

  dt {
    font-weight: 600;
  }

  dd {
    margin: 0;
  }
</style>
